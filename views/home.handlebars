<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>notePULL</title>
    <meta name="COGS120" content="Sign Up">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="css/main.css">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <!-- Bootstrap Form Helpers -->
    <link href="css/bootstrap-form-helpers.min.css" rel="stylesheet" media="screen">
    <!-- Social Media Buttons -->
    <link href="css/social-buttons-3.css" rel="stylesheet">
    <!-- Extra Icons -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
</head>

    <body>
        <div class="container-fluid">
            <!-- COPY AND PASTE THIS FOR THE SIDE BAR CODE -->
            <div class="row">
                <div class="col-xs-4 visible-xs" style="background-color: #474747;">
                    <ul class="nav nav-sidebar">
                        <li><span style="color: white;font-family:Helvetica; font-size: 150%;">note </span><span style="font-size:350%; font-family: Ostrich Sans; color:#39B54A;">PULL</span></li>
                        <li><a href="new.html"><i class="fa fa-plus fa-3x"></i><br/>NEW</a></li>
                        <li class="active"><a href="#"><i class="fa fa-folder fa-3x"></i><br/>FOLDERS</a></li>
                        <li><a href="settings.html"><i class="fa fa-cog fa-3x"></i><br/>SETTINGS</a></li>
                        <li><a href="help.html"><i class="glyphicon glyphicon-question-sign iconav"></i><br/>HELP</a></li>
                        <li><a href="index.html"><i class="glyphicon glyphicon-log-out iconav"></i><br/>LOGOUT</a></li>
                    </ul>
                </div>
                <div class="col-sm-2 col-md-1 sidebar visible-md visible-lg" style="background-color: #474747;">
                    <ul class="nav nav-sidebar">
                        <li><span style="color: white;font-family:Helvetica; font-size: 150%;">note </span><span style="font-size:350%; font-family: Ostrich Sans; color:#39B54A;">PULL</span></li>
                        <li><a href="#"><i class="fa fa-plus fa-3x"></i><br/>NEW</a></li>
                        <li class="active"><a href="#"><i class="fa fa-folder fa-3x"></i><br/>FOLDERS</a></li>
                        <li><a href="settings.html"><i class="fa fa-cog fa-3x"></i><br/>SETTINGS</a></li>
                        <li><a href="help.html"><i class="glyphicon glyphicon-question-sign iconav"></i><br/>HELP</a></li>
                        <li><a href="index.html"><i class="glyphicon glyphicon-log-out iconav"></i><br/>LOGOUT</a></li>
                    </ul>
                </div>
            <!-- this is the other column in the code -->
            <div class="col-xs-6 col-sm-9 col-md-10 main">
                 <!-- Button HTML (to Trigger Modal) -->
                        <span class="folder">
                            <h2><a href="#" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus fa-4x"></i><br/>NEW</a></li></a></h2>
                        </span>
                        <!-- Modal HTML -->
                        <div id="myModal" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title">New Folder</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>Folder Title: </p>
                                        <input type="text" class="form-control" placeholder="Folder Title">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success">Create</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                {{#each folders}}
                <span class="folder">
                    <h2><a href="#" data-toggle="modal" data-target="#{{@index}}"><i class="fa fa-folder fa-4x"></i><br/>{{this.folder_name}}<br/><small><i class="fa fa-calendar"></i> {{this.last_updated}}</small></a></li></a></h2>
                </span>
                <!-- Modal HTML -->
                        <div id="{{@index}}" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title">{{this.folder_name}}</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div id="notepageRead">
                                            <div id="date-div">
                                                <span id="date-read">{{date}}<span>
                                            </div>
                                            <h3>{{title}}</h3>
                                            <ul>
                                            {{#each notes}}
                                                <!--<li class="note">{{note}}</li>-->
                                                <li><div class="note {{tag}}" data-tag="{{tag}}">{{note}}</div></li>
                                            {{/each}}
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success">Create</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                {{/each}}
            <!-- END COPY PASTE HERE FOR SIDE BAR CODE -->
            </div>
            </div>
        </div>
        <!-- Placed at the end of the document so the pages load faster -->
        <script type="text/javascript" src="js/jquery-1.9.0.min.js"></script>
        <script type="text/javascript" src="js/jquery-1.10.1.min.js"></script>
        <script type="text/javascript" src="js/jquery-1.10.2.min.js"></script>
        <script type="text/javascript" src="js/bootstrap.min.js"></script>

        <script src="js/note.js"></script>
    </body>
</html>
