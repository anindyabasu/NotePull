        <div class="container">
            <!-- COPY AND PASTE THIS FOR THE SIDE BAR CODE -->
             <div class="row row-offcanvas row-offcanvas-left">
                <!-- this is the other column in the code -->
                <div class="col-xs-12 main" id="column2">
                    <a href="/landing.html">
                            <img src="/img/notepulllogofoldersopen.png" style="width:200px;"/>
                        </a>
                    <form id="folderForm" action="/edit/{{id}}" method="POST">
                        <div class="form-group">
                          <input id="folder_name" name="folder_name" placeholder="Folder Name" type="text" size="35" class="form-control" style="border-radius:0;font-size:large;" value="{{folder_name}}"/>
                        </div>
                        <span id="folder-date" style="color: silver;">updated {{last_updated}}</span>
                        <div class="note-box" style="margin-top:10px;"><a href="/new/{{id}}" style="color:#fff;" class="foldertitle">+    New Note</a> <div class="btn-group sortControl" id="sortNotesControl" style="float:right;">
                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span id="sortNotesButton">Sort By</span><span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <li><a href="/sort/{{id}}/alpha" data-order="alpha">Title: A-Z</a></li>
                            <li><a href="/sort/{{id}}/alphadesc" data-order="alphadesc">Title: Z-A</a></li>
                            <li><a href="/sort/{{id}}/latest" data-order="latest">Date: Latest</a></li>
                            <li><a href="/sort/{{id}}/oldest" data-order="oldest">Date: Oldest</a></li>
                          </ul>
                    </div> </div>

                        <a style="visibility:hidden;"> <i class="fa fa-times"></i></a>
                        <ul style="margin:0;padding:0;">
                        {{#each folder}}
                            <!--<li class="note">{{note}}</li>-->
                            <li class="folder note-item" style="margin-left:0;">
                                <div class="note-box">
                                <a class="foldertitle" href="/edit/{{../id}}/{{@index}}">{{this.title}}</a> </div>
                                <!--<div class="x"><a class="foldertitle" href="/delete/{{../id}}/{{@index}}">x</a></li></div>-->
                                <a href="/delete/{{../id}}/{{@index}}" class="btn-xs deleteNote"><i class="fa fa-times"></i></a>
                        {{/each}}
                        </ul>
                        
                        <input type="submit" id="submitBtn" style="visibility:hidden" class="btn btn-default submitButton" value="Update folder"></input>
                    </form>
<!--
                    <form id="deleteForm" action="/delete/{{id}}" method="POST">
