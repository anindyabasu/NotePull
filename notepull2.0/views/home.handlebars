<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>notePULL</title>
    <meta name="COGS120" content="Sign Up">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="css/main.css">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <!-- Bootstrap Form Helpers -->
    <link href="css/bootstrap-form-helpers.min.css" rel="stylesheet" media="screen">
    <!-- Social Media Buttons -->
    <link href="css/social-buttons-3.css" rel="stylesheet">
    <!-- Extra Icons -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
</head>

    <body>
        <div class="container-fluid">
            <!-- COPY AND PASTE THIS FOR THE SIDE BAR CODE -->
            <div class="row">
            <!-- this is the other column in the code -->
            <div class="col-xs-6 col-sm-9 col-md-10 main">
                <img src="/img/notepulllogofolders.png" width=310px />
                        <a href="/new">
                            <img src="/img/newfolder.png" width=310px/>
                        </a>
                        
                        {{#each home.folders}}
                        
                <span class="folder">
                    <h2><a href="#{{@index}}"><span class="foldertitle"> {{this.folder_name}}<br/><small><i class="fa fa-calendar"></i> {{this.last_updated}}</small></span></a></li></a></h2>
                </span>
                <!-- Modal HTML -->
                        <!-- THIS MODAL IS TO OPEN AN ALREADY EXISTING FOLDER -->
                        <div id="{{@index}}" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title">{{this.folder_name}}</h4>
                                    </div>
                                    <div class="modal-body">
                                        {{setIndex @index}}
                                        {{#each folder}}
                                        <div id="notepageRead">
                                            <a class="note_file" href="/edit/{{../index}}/{{@index}}"><h3>{{title}}</h3></a>
                                            <br>
                                        </div>
                                        {{/each}}
                                    </div>
                                    <div class="modal-footer">
                                        <a href="/new/{{@index}}" class="btn btn-success">Create</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                {{/each}}

            <!-- END COPY PASTE HERE FOR SIDE BAR CODE -->
            </div>
            </div>
        </div>
        <!-- Placed at the end of the document so the pages load faster -->
        <script type="text/javascript" src="js/jquery-1.9.0.min.js"></script>
        <script type="text/javascript" src="js/jquery-1.10.1.min.js"></script>
        <script type="text/javascript" src="js/jquery-1.10.2.min.js"></script>
        <script type="text/javascript" src="js/bootstrap.min.js"></script>
        <script src="js/note.js"></script>
    </body>
</html>